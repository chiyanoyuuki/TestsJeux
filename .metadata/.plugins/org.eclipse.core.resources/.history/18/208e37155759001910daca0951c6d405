package graphiques;

import java.util.*;
import org.newdawn.slick.*;
import interfaces.*;
import lanceur.App;
import generaux.*;

public class Nuage extends Graphique
{
	private ArrayList<Coord> ronds;
	private Color color;
	
	public Nuage()
	{
		super((int)(Math.random()*App.width),(int)(Math.random()*App.height));
		
		int delai = (int)((Math.random()*20)*2)+10;
		int tmp = 100+(int)((1-(50/delai))*155);
				
		this.setDelai(delai);
		this.color = new Color(tmp,tmp,tmp);
	}
	
	public void render(GameContainer container, Graphics g) throws SlickException 
	{
		g.setColor(this.color);
		g.fillOval(getX(), getY(), 50, 50);
	}

	public void update(GameContainer container, int delta) throws SlickException 
	{
		
	}
}