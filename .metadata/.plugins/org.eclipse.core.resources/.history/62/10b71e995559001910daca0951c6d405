package interfaces;

import org.newdawn.slick.*;

public abstract class Graphique 
{	
	private int x;
	private int y;
	
	public Graphique(int x, int y)	{this.x = x;this.y = y;}
	public Graphique() 				{this.x=0;this.y=0;}
	
	public void avancer() 	{this.x++;}
	public void reculer() 	{this.x--;}
	public void monter() 	{this.y--;}
	public void descendre() {this.y++;}
	
	public int getX() 		{return this.x;}
	public int getY() 		{return this.y;}
	
	public void setX(int x) {this.x=x;}
	public void setY(int y) {this.y=y;}
		
	public abstract void render(GameContainer container, Graphics g) throws SlickException;
	public abstract void update(GameContainer container, int delta) throws SlickException;
}
