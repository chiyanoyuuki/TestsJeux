package sols;

import org.newdawn.slick.*;
import interfaces.Objet;

public class Sols implements Objet
{	
	private Image img, img2;
	public Sols() throws SlickException
	{
		img = new Image("C:/Users/ASC Arma/Desktop/TestJeu/TestJeu1/images/sols/dirt/0.png");
		img = new Image("C:/Users/ASC Arma/Desktop/TestJeu/TestJeu1/images/sols/dirt/1.png");
	}
	
	public void render(GameContainer container, Graphics g) throws SlickException 
	{
		for(int i=0;i<6;i++)
		{
			img.draw(500+50*i,450);
		}
		for(int i=1;i<3;i++)
		{
			img2.draw(500+50*i,500);
		}
		
		for(int i=0;i<28;i++)
		{
			if(i!=16&&i!=17)img.draw(100+50*i,700);
		}
		for(int i=2;i<24;i++)
		{
			if(i!=8)img2.draw(100+50*i,750);
		}
		for(int i=6;i<19;i++)
		{
			img2.draw(100+50*i,800);
		}
	}

	public void update(GameContainer container, int delta) throws SlickException 
	{
		
	}

}
